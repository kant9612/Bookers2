<%= flash[:notice] %>
<div class="container">
<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <div class="row">
    <div class="col-lg-3">

			<!--  ここに部分テンプレ　-->
      <h1>User info</h1>
        <table class="table">
          <tbody>
            <!--ここに画像挿入-->
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
            <tr>
              <!--ログインしている人の名前-->
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
              <tr>
                <!-- ログインしている人の紹介文-->
              <th>introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>

        <%= link_to edit_user_path(@user),  class: "btn btn-secondary col-xs-12" do %>
			  <i class="fa fa-user-cog" aria-hidden="true"></i>
			  <% end %>

      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <label>Title</label>
        <br>
        <%= f.text_field :title, class: "col-xs-12 book_title" %>
        <br>
        <label>opinion</label>
        <br>
        <%= f.text_area :body, class: "col-xs-12 book_body" %>
        <br><br><br>
        <div class="actions">
        <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
        </div>
      <% end %>
      <!--ここまで-->


		</div>
		<div class="col-lg-9">
		  <h2>Book detail</h2>
		    <table class="table">
		      <thead>
		        <tr align="left">
		          <th></th>
		          <th></th>
		          <th></th>
		          <th colspan="3"></th>
		        </tr>
		    	</thead>
		    	<tbody>
						<tr>
				    	<!--%= attachment_image_tag @bookdetail.user, :profile_image, :fill, 40, 40, format:'jpeg', fallback: "no_image.jpg" %></td>-->
				     	<td><%= link_to @bookdetail.user.name, user_path(@bookdetail.user.id) %></td>
				      <td><%= link_to @bookdetail.title, book_path(@bookdetail.id) %></td>
				      <td><%= @bookdetail.body %></td>
				      <% if @bookdetail.user_id == current_user.id %>
              <th><%= link_to "Edit", edit_book_path(@bookdetail.id), class: "btn-sm btn-success edit_book_#{@bookdetail.id}" %></th>
              <th><%= link_to "Destroy", book_path(@bookdetail.id), method: :delete, "data-confirm" => "削除しますか？", class: "btn-sm btn-danger destroy_book_#{@bookdetail.id}" %></th>
              <% end %>
				  	</tr>
		    	</tbody>
		    </table>
		</div>
  </div>
</div>