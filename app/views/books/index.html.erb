<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h1>User info</h1>
        <table class="table">
       	  <tbody>
            <tr>
              <th>name</th>
            </tr>
            <tr>
              <th>introduction</th>
            </tr>
          </tbody>
        </table>
        <%= link_to "", edit_user_path(@user),  class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <label>Title</label>
        <br>
        <%= f.text_field :title, class: "col-xs-12 book_title" %>
        <br>
        <label>opinion</label>
        <br>
        <%= f.text_area :body, class: "col-xs-12 book_body" %>
        <br>
        <br>
        <br>
        <div class="actions">
        <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
        </div>
      <% end %>
		</div>
		<div class="col-lg-9">
		  <h2>Books</h2>
		    <table class="table table-striped">
		      <thead>
		        <tr align="left">
		          <th>image</th>
		          <th>title</th>
		          <th>opinion</th>
		          <th colspan="3"></th>
		        </tr>
		    	</thead>
		    	<tbody>
					  <% @books.reverse_each do |book| %>
					  <tr>
					    <td>プロフ画像</td>
				      <td><%= link_to book.title, book_path(book.id) %></td>
				      <td><%= book.body %></td>
				     </tr>
		        <% end %>
		    	</tbody>
		    </table>
		</div>
  </div>
</div>