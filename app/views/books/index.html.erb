<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <!--  ここに部分テンプレ　-->
      <%= render 'users/list', users: @users %>
      <!--ここまで-->
		</div>
		<div class="col-lg-9">
		  <h2>Books</h2>
		    <table class="table">
		      <thead>
		        <tr align="left">
		          <th>image</th>
		          <th>title</th>
		          <th>opinion</th>
		          <th colspan="3"></th>
		        </tr>
		    	</thead>
		    	<tbody>
					  <% @books.reverse_each do |book| %>
					  <tr>
					    <td>プロフ画像</td>
				      <td><%= link_to book.title, book_path(book.id) %></td>
				      <td><%= book.body %></td>
				     </tr>
		        <% end %>
		    	</tbody>
		    </table>
		</div>
  </div>
</div>