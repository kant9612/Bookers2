<div class="container">
<% if @user.errors.any? %>
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user, local: true do |f| %>
        <div class="form-group"><label>Name</label><br><%= f.text_field :name, class: "name col" %></div>
        <div class="form-group"><label>Image</label><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-image" %></div>
        <div class="form-group"><label>Introduction</label></div><%= f.text_area :introduction, class: "introduction col" %>
        <div class="form-group"><%= f.submit "Update User", class: "edit_user#{current_user.id} btn btn-secondary" %></div>
        <% end %>
    </div>
  </div>
</div>
<footer>
  <div class="container mt-5">
    <p class="text-center">CopyRight Infratop.inc</p>
  </div>
</footer>